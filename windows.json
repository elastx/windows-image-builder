{
  "variables": {
    "iso_checksum": "",
    "iso_url": "",
    "windows_version": "",
    "winrm_password": "s3cr3tbu1ldp4ssw0rd"
  },
  "builders": [
    {
      "accelerator": "kvm",
      "communicator": "winrm",
      "cpus": "4",
      "disk_size": "51200",
      "floppy_files": [
        "http/windows-{{ user `windows_version` }}/Autounattend.xml",
        "scripts/win-common/unattend.xml",
        "scripts/win-common/sysprep.bat"
      ],
      "headless": "true",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_urls": [
        "{{ user `iso_url` }}"
      ],
      "cd_files": [
        "./packer_cache/virtio-win"
      ],
      "memory": "8192",
      "output_directory": "images",
      "shutdown_command": "A:\\sysprep.bat",
      "shutdown_timeout": "15m",
      "type": "qemu",
      "vm_name": "windows-{{ user `windows_version` }}",
      "winrm_insecure": "true",
      "winrm_password": "{{ user `winrm_password` }}",
      "winrm_timeout": "1h",
      "winrm_use_ssl": "true",
      "winrm_username": "Administrator",
      "disk_compression": "true",
      "qemuargs": [
        [ "--cpu", "host" ]
      ]
    }
  ],
  "provisioners": [
    {
      "duration": "2m",
      "type": "sleep"
    },
    {
      "command": "ansible-playbook --connection=winrm --extra-vars='packer_build_name=windows-{{ user `windows_version` }} ansible_password='{{ user `winrm_password` }}' ansible_winrm_server_cert_validation=ignore ansible_winrm_connection_timeout=1000 ansible_winrm_operation_timeout_sec=1000 ansible_winrm_read_timeout_sec=1000' -i 127.0.0.1, ansible/windows-{{ user `windows_version` }}.yml",
      "environment_vars": [
        "ANSIBLE_CONFIG=ansible/ansible.cfg",
        "ANSIBLE_REMOTE_PORT={{ build `Port` }}",
        "ANSIBLE_REMOTE_USER=Administrator"
      ],
      "type": "shell-local"
    }
  ]
}
